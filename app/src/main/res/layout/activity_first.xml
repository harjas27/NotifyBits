<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d1"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COURSE NO."
        android:id="@+id/courseno"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/coursenotext"
        android:hint="Course No."
        android:textColorHint="#D3D3D3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LECTURE SECTION NO."
        android:id="@+id/sectionno"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/lecsectionnotext"
        android:hint="Lecture Section"
        android:textColorHint="#D3D3D3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TUTORIAL SECTION NO."
        android:id="@+id/tutsectionno"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tutsectionnonotext"
        android:hint="Tutorial Section"
        android:textColorHint="#D3D3D3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRACTICAL SECTION NO."
        android:id="@+id/practicalsectionno"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/praccticalsectionnonotext"
        android:hint="Practical section"
        android:textColorHint="#D3D3D3" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Add Event"
        android:layout_gravity="center_horizontal"
        android:id="@+id/add"
        android:textColor="#000000"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Show Timetable"
        android:layout_gravity="center_horizontal"
        android:id="@+id/timetable"
        android:textColor="#000000"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Show Details"
        android:layout_gravity="center_horizontal"
        android:id="@+id/details"
        android:textColor="#000000"/>
</LinearLayout>